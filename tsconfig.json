{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@base-components": [
        "./src/base-components"
      ],
      "@components": [
        "./src/components"
      ],
      "@domain": [
        "./src/domain"
      ],
      "@pages": [
        "./src/pages"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
